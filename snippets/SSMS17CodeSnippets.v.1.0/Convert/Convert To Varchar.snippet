<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
<_locDefinition xmlns="urn:locstudio">
    <_locDefault _loc="locNone" />
    <_locTag _loc="locData">Title</_locTag>
    <_locTag _loc="locData">Description</_locTag>
    <_locTag _loc="locData">Author</_locTag>
    <_locTag _loc="locData">ToolTip</_locTag>
   <_locTag _loc="locData">Default</_locTag>
</_locDefinition>
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Convert To Varchar</Title>
                        <Shortcut></Shortcut>
			<Description>Code Snippet for an inline convert to varchar statement.</Description>
			<Author>Asel Sathkumara</Author>
			<SnippetTypes>
                                <SnippetType>SurroundsWith</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
                                <Literal>
                                	<ID>alias</ID>
                                	<ToolTip>Provide an alias for the value</ToolTip>
                                	<Default>[alias_name]</Default>
                                </Literal>
								<Literal>
                                	<ID>style</ID>
                                	<ToolTip>Provide a style for the value (See MS Docs)</ToolTip>
                                	<Default>[style]</Default>
                                </Literal>
			</Declarations>
			<Code Language="SQL"><![CDATA[CONVERT(VARCHAR, $selected$, $style$) AS $alias$]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
