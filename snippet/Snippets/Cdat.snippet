          <Default>1 MB</Default>
        </Literal>
        <Literal>
          <ID>database_name</ID>
          <Default>database_name</Default>
        </Literal>
        <Literal>
          <ID>max_size</ID>
          <Default>UNLIMITED</Default>
        </Literal>
        <Literal>
          <ID>log_size</ID>
