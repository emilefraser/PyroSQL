--	FILENAME = '$database_name$.mdf',
--	SIZE = $db_size$,
--	MAXSIZE = $max_size$,
--	FILEGROWTH = $growth_increment$
--) 
--LOG ON
--(
--	NAME = $database_name$_log,
--	FILENAME = '$database_name$.ldf',
--	SIZE = $log_size$,
--	MAXSIZE = $max_size$,
--	FILEGROWTH = $growth_increment$
--)
--COLLATE $collate$
GO

USE [$database_name$]
GO]]></Code>
